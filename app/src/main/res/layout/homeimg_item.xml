<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/cv_item"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ll_view"
    android:padding="5dp">

    <ImageView
        android:id="@+id/homeimg_item_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
       android:src="@drawable/cs"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical"
        android:background="#70000000"
        android:layout_alignBottom="@+id/homeimg_item_img"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/homeimg_item_img"
        android:layout_alignEnd="@+id/homeimg_item_img">

        <TextView
            android:id="@+id/homeimg_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="【美D共享】♠ 小潘鼠Monkey"
            android:maxEms="16"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/homeimg_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="华声美女"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/homeimg_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-11-18 14:00"
            android:textColor="@color/white"/>
    </LinearLayout>
</RelativeLayout>

</android.support.v7.widget.CardView>